<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:text="当前填写调查表"
            android:textSize="40sp"
            android:textColor="@color/color_33"
            />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <RadioButton
                android:id="@+id/rb_x"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:textColor="@color/color_33"
                android:textSize="19sp"
                android:text="2022年全国常见病监测学生调查表（小学版）"
                />
            <RadioButton
                android:id="@+id/rb_z"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:textColor="@color/color_33"
                android:textSize="19sp"
                android:text="2022年全国常见病监测学生调查表（中学版）"
                />
            <RadioButton
                android:id="@+id/rb_d"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:textColor="@color/color_33"
                android:textSize="19sp"
                android:text="2022年全国常见病监测学生调查表（大学版）"
                />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史填单"
                android:textColor="@color/color_33"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/cb7_bg"
                android:gravity="center"
                android:text="查看详情"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="60dp"
            android:background="@color/color_f0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平板编号"
                android:textColor="@color/color_33"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_tablet_no"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/f0_bg"
                android:paddingStart="6dp"
                android:hint="请填写平板编号"
                android:inputType="numberSigned"
                android:textColor="@color/color_33"
                android:textSize="19sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="60dp"
            android:background="@color/color_f0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本"
                android:textColor="@color/color_33"
                android:textSize="40sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:gravity="center"
                    android:text="当前版本0.0.1"
                    android:textColor="@color/color_8c"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/tv_app_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="60dp"
                    android:gravity="center"
                    android:text="联机升级 >"
                    android:textColor="@color/color_cb7"
                    android:textSize="19sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>